{
    "version": 2,
    "builds": [
      { "src": "backend/src/app.ts", "use": "@vercel/node" },
      { "src": "frontend/package.json", "use": "@vercel/static-build" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/src/app.ts" },
      { "src": "/(.*)", "dest": "frontend/public/$1" }
    ],
    "env": {
      "PUBLIC_URL": "/frontend"
    }
  }
  